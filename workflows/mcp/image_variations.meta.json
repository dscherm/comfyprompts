{
  "name": "Image Variations",
  "description": "Generates visual variations of an existing image using Flux 1 Dev img2img pipeline. Encodes the source image to latent space and re-samples with optional prompt guidance.",
  "requirements": {
    "nodes": ["CheckpointLoaderSimple", "LoadImage", "VAEEncode", "CLIPTextEncode", "KSampler", "VAEDecode", "SaveImage"],
    "models": {
      "checkpoint": "flux1-dev-fp8.safetensors"
    },
    "minimum_vram_gb": 8
  },
  "parameters": {
    "image_path": {"type": "string", "required": true, "description": "Filename of the source image to create variations of"},
    "prompt": {"type": "string", "required": false, "description": "Optional text guidance for variations"},
    "negative_prompt": {"type": "string", "required": false, "description": "Things to avoid"},
    "seed": {"type": "int", "required": false, "description": "Random seed (each variation uses seed+i)"},
    "steps": {"type": "int", "required": false, "description": "Sampling steps"},
    "cfg": {"type": "float", "required": false, "description": "CFG scale"},
    "sampler_name": {"type": "string", "required": false, "description": "Sampler algorithm"},
    "scheduler": {"type": "string", "required": false, "description": "Noise scheduler"},
    "denoise": {"type": "float", "required": false, "description": "Denoising strength (controls variation amount)"}
  },
  "output": {
    "type": "image",
    "format": "png",
    "node": "SaveImage"
  },
  "category": "editing",
  "tags": ["variations", "img2img", "flux"]
}
